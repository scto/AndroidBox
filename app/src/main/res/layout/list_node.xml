<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/color_node_shade"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/node_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/tomorrow_medium"
        android:text="AppCompact Class"
        android:textSize="14sp" />


    <ImageView
        android:layout_width="@dimen/img_nodelist"
        android:layout_height="@dimen/img_nodelist"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/node_label"
        android:layout_centerVertical="true"
        android:src="@drawable/edit"
        app:tint="@color/system1_500"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:layout_width="@dimen/img_nodelist"
        android:layout_height="@dimen/img_nodelist"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/node_label"
        android:layout_centerVertical="true"
        android:src="@drawable/add"
        app:tint="@color/system1_500"
        android:contentDescription="@string/app_name" />

</RelativeLayout>